# Gemfile
source "https://rubygems.org"

# Use GitHub Pages gem which includes all compatible versions
gem "github-pages", "~> 228", group: :jekyll_plugins

# Windows and JRuby does not include zoneinfo files, so bundle the tzinfo-data gem
gem "tzinfo", "> 1.2.0", :platforms => [:windows, :jruby]
gem "tzinfo-data", :platforms => [:windows, :jruby]

# Alternative to wdm for Windows directory watching
# Using listen gem which has better Ruby 3.4 compatibility
gem "listen", "~> 3.8", :platforms => [:windows]